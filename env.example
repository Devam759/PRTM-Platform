# Environment Configuration for HealthCare Helper Backend

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/healthcare-helper
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/healthcare-helper?retryWrites=true&w=majority

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Secret (for authentication if needed)
JWT_SECRET=your-super-secret-jwt-key-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# API Keys (for external services)
# Google Vision API (for medicine image recognition)
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# AWS Configuration (for S3 storage if needed)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=healthcare-helper-uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
